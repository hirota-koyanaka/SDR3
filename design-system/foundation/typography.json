{
  "fontFamilies": {
    "primary": "Noto Sans JP",
    "secondary": "Inter",
    "system": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Yu Gothic', Meiryo, sans-serif"
  },
  "fontSizes": {
    "xs": "12px",
    "sm": "14px",
    "base": "16px",
    "lg": "18px",
    "xl": "20px",
    "2xl": "24px",
    "3xl": "30px",
    "4xl": "36px",
    "5xl": "48px"
  },
  "fontWeights": {
    "light": 300,
    "regular": 400,
    "medium": 500,
    "semibold": 600,
    "bold": 700
  },
  "lineHeights": {
    "tight": 1.2,
    "snug": 1.3,
    "normal": 1.5,
    "relaxed": 1.6,
    "loose": 2
  },
  "letterSpacing": {
    "tighter": "-0.05em",
    "tight": "-0.025em",
    "normal": "0",
    "wide": "0.025em",
    "wider": "0.05em",
    "widest": "0.1em"
  },
  "textStyles": {
    "heading": {
      "h1": {
        "fontSize": "32px",
        "fontWeight": 700,
        "lineHeight": 1.2,
        "letterSpacing": "-0.025em"
      },
      "h2": {
        "fontSize": "24px",
        "fontWeight": 700,
        "lineHeight": 1.3,
        "letterSpacing": "-0.025em"
      },
      "h3": {
        "fontSize": "20px",
        "fontWeight": 600,
        "lineHeight": 1.4,
        "letterSpacing": "0"
      },
      "h4": {
        "fontSize": "18px",
        "fontWeight": 600,
        "lineHeight": 1.4,
        "letterSpacing": "0"
      },
      "h5": {
        "fontSize": "16px",
        "fontWeight": 600,
        "lineHeight": 1.5,
        "letterSpacing": "0"
      }
    },
    "body": {
      "large": {
        "fontSize": "18px",
        "fontWeight": 400,
        "lineHeight": 1.6
      },
      "regular": {
        "fontSize": "16px",
        "fontWeight": 400,
        "lineHeight": 1.6
      },
      "small": {
        "fontSize": "14px",
        "fontWeight": 400,
        "lineHeight": 1.5
      }
    },
    "ui": {
      "button": {
        "fontSize": "16px",
        "fontWeight": 500,
        "lineHeight": 1,
        "letterSpacing": "0.025em"
      },
      "caption": {
        "fontSize": "12px",
        "fontWeight": 400,
        "lineHeight": 1.4
      },
      "label": {
        "fontSize": "14px",
        "fontWeight": 500,
        "lineHeight": 1.4
      }
    }
  }
}