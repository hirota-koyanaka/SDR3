{
  "name": "Button",
  "description": "基本的なボタンコンポーネント",
  "variants": {
    "type": {
      "primary": {
        "background": "#003DA5",
        "color": "#FFFFFF",
        "border": "none",
        "hover": {
          "background": "#002A75",
          "transform": "translateY(-2px)",
          "boxShadow": "0 4px 12px rgba(0, 61, 165, 0.3)"
        },
        "active": {
          "background": "#001D52",
          "transform": "translateY(0)"
        },
        "disabled": {
          "background": "#9CA3AF",
          "cursor": "not-allowed",
          "opacity": 0.6
        }
      },
      "secondary": {
        "background": "#FFFFFF",
        "color": "#003DA5",
        "border": "2px solid #003DA5",
        "hover": {
          "background": "#F3F4F6",
          "borderColor": "#002A75"
        },
        "active": {
          "background": "#E5E7EB"
        },
        "disabled": {
          "borderColor": "#D1D5DB",
          "color": "#9CA3AF",
          "cursor": "not-allowed",
          "opacity": 0.6
        }
      },
      "success": {
        "background": "#10B981",
        "color": "#FFFFFF",
        "border": "none",
        "hover": {
          "background": "#059669",
          "transform": "translateY(-2px)",
          "boxShadow": "0 4px 12px rgba(16, 185, 129, 0.3)"
        }
      },
      "danger": {
        "background": "#EF4444",
        "color": "#FFFFFF",
        "border": "none",
        "hover": {
          "background": "#DC2626",
          "transform": "translateY(-2px)",
          "boxShadow": "0 4px 12px rgba(239, 68, 68, 0.3)"
        }
      },
      "ghost": {
        "background": "transparent",
        "color": "#374151",
        "border": "none",
        "hover": {
          "background": "#F9FAFB",
          "color": "#111827"
        }
      }
    },
    "size": {
      "small": {
        "padding": "6px 12px",
        "fontSize": "14px",
        "lineHeight": "20px",
        "borderRadius": "6px",
        "minHeight": "32px"
      },
      "medium": {
        "padding": "8px 16px",
        "fontSize": "16px",
        "lineHeight": "24px",
        "borderRadius": "8px",
        "minHeight": "40px"
      },
      "large": {
        "padding": "12px 24px",
        "fontSize": "18px",
        "lineHeight": "28px",
        "borderRadius": "10px",
        "minHeight": "48px"
      }
    },
    "fullWidth": {
      "true": {
        "width": "100%",
        "display": "block"
      },
      "false": {
        "width": "auto",
        "display": "inline-flex"
      }
    },
    "loading": {
      "true": {
        "cursor": "wait",
        "opacity": 0.7,
        "pointerEvents": "none"
      }
    }
  },
  "properties": {
    "display": "inline-flex",
    "alignItems": "center",
    "justifyContent": "center",
    "fontWeight": 500,
    "transition": "all 0.2s ease",
    "cursor": "pointer",
    "userSelect": "none",
    "textDecoration": "none",
    "outline": "none",
    "gap": "8px",
    "position": "relative",
    "overflow": "hidden"
  },
  "states": {
    "focus": {
      "outline": "2px solid #003DA5",
      "outlineOffset": "2px"
    },
    "focusVisible": {
      "boxShadow": "0 0 0 3px rgba(0, 61, 165, 0.2)"
    }
  },
  "icons": {
    "position": "relative",
    "size": {
      "small": "16px",
      "medium": "20px",
      "large": "24px"
    }
  },
  "accessibility": {
    "role": "button",
    "tabIndex": 0,
    "ariaPressed": false,
    "ariaDisabled": false
  }
}