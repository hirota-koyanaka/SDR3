{
  "name": "FormField",
  "description": "ラベル、入力フィールド、ヘルパーテキストを含むフォームフィールドコンポーネント",
  "structure": {
    "container": {
      "display": "flex",
      "flexDirection": "column",
      "gap": "6px",
      "marginBottom": "20px",
      "width": "100%"
    },
    "labelContainer": {
      "display": "flex",
      "alignItems": "center",
      "justifyContent": "space-between",
      "marginBottom": "6px"
    },
    "inputContainer": {
      "position": "relative",
      "width": "100%"
    },
    "helperContainer": {
      "display": "flex",
      "alignItems": "flex-start",
      "gap": "4px",
      "marginTop": "4px"
    }
  },
  "elements": {
    "label": {
      "fontSize": "14px",
      "fontWeight": 500,
      "color": "#374151",
      "lineHeight": 1.4,
      "display": "flex",
      "alignItems": "center",
      "gap": "4px"
    },
    "required": {
      "color": "#EF4444",
      "fontSize": "14px",
      "fontWeight": 500,
      "marginLeft": "2px"
    },
    "optional": {
      "color": "#6B7280",
      "fontSize": "12px",
      "fontWeight": 400,
      "marginLeft": "8px"
    },
    "tooltip": {
      "color": "#6B7280",
      "fontSize": "14px",
      "cursor": "help",
      "marginLeft": "4px"
    },
    "helperText": {
      "fontSize": "12px",
      "color": "#6B7280",
      "lineHeight": 1.4,
      "display": "flex",
      "alignItems": "flex-start",
      "gap": "4px"
    },
    "errorText": {
      "fontSize": "12px",
      "color": "#EF4444",
      "lineHeight": 1.4,
      "display": "flex",
      "alignItems": "flex-start",
      "gap": "4px",
      "animation": "fadeIn 0.2s ease"
    },
    "successText": {
      "fontSize": "12px",
      "color": "#10B981",
      "lineHeight": 1.4,
      "display": "flex",
      "alignItems": "flex-start",
      "gap": "4px",
      "animation": "fadeIn 0.2s ease"
    },
    "counter": {
      "fontSize": "12px",
      "color": "#6B7280",
      "textAlign": "right",
      "marginTop": "4px"
    }
  },
  "variants": {
    "layout": {
      "vertical": {
        "flexDirection": "column",
        "labelMarginBottom": "6px"
      },
      "horizontal": {
        "flexDirection": "row",
        "alignItems": "center",
        "label": {
          "width": "30%",
          "marginRight": "16px"
        },
        "inputContainer": {
          "flex": 1
        }
      },
      "floating": {
        "position": "relative",
        "label": {
          "position": "absolute",
          "top": "50%",
          "left": "12px",
          "transform": "translateY(-50%)",
          "transition": "all 0.2s ease",
          "pointerEvents": "none",
          "background": "#FFFFFF",
          "padding": "0 4px"
        },
        "floated": {
          "top": "-8px",
          "fontSize": "12px",
          "transform": "translateY(0)"
        }
      }
    },
    "state": {
      "default": {},
      "error": {
        "input": {
          "borderColor": "#EF4444",
          "focus": {
            "boxShadow": "0 0 0 3px rgba(239, 68, 68, 0.1)"
          }
        },
        "label": {
          "color": "#EF4444"
        }
      },
      "success": {
        "input": {
          "borderColor": "#10B981",
          "focus": {
            "boxShadow": "0 0 0 3px rgba(16, 185, 129, 0.1)"
          }
        }
      },
      "disabled": {
        "opacity": 0.6,
        "cursor": "not-allowed",
        "label": {
          "color": "#9CA3AF"
        }
      }
    }
  },
  "icons": {
    "error": {
      "name": "AlertCircle",
      "size": "14px",
      "color": "#EF4444"
    },
    "success": {
      "name": "CheckCircle",
      "size": "14px",
      "color": "#10B981"
    },
    "info": {
      "name": "InfoCircle",
      "size": "14px",
      "color": "#6B7280"
    }
  },
  "accessibility": {
    "labelFor": "input-id",
    "ariaDescribedby": "helper-text-id",
    "ariaInvalid": false,
    "ariaRequired": false
  }
}